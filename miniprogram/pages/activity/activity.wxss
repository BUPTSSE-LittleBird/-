.topGroup{
    background: #1e82d2;
    padding: 20rpx;
    height: 58rpx;
    width: 100%;
    display: flex;
}

.topGroup .searchGroup{
    display: flex;
    width: 700rpx;
}

.topGroup .searchGroup .searchInput{
    flex: 1;
    background: #1a71b7;
    border-radius: 4px;
    padding: 0 10rpx;
    font-size: 24rpx;
}

.topGroup .searchGroup .placeholderInput{
    color: white;
}

.container{
    padding: 15rpx 30rpx;
    border-bottom: 1rpx solid black;
}

.container .project{
    height: 100%;
    width: 100%;
}

.container .project .projectImage{
    width: 100%;
    height: 400rpx;
    border-radius: 4px;
}

.container .project .information{
    height: 100rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.information .name{
    font-size: 30rpx;
    font-weight: bold;
}

.information .bottom{
    display: flex;
}
.information .bottom image{
    width: 30rpx;
    height: 30rpx;
    margin-left: 10rpx;
}

.information .bottom text{
    font-size: 20rpx;
    color: #656565;
    margin-left: 10rpx;
}