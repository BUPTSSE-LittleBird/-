.container{
    padding: 20rpx;
    height: 120rpx;
}

.container .projectGroup{
    display: flex;
    width: 100%;
    height: 100%;
}

.projectGroup .userGroup{
    display: flex;
    justify-content: space-evenly;
}

.userGroup .avatar{
    width: 120rpx;
    height: 120rpx;
}

.userGroup .rightInfo{
    height: 100%;
    width: 400rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 20rpx;
}

.userGroup .rightInfo .name{
    font-size: 28rpx;
    color: #323232;
}

.userGroup .rightInfo .detail{
    font-size: 20rpx;
    color: #656565;
}

.userGroup .rightInfo .detail .time{
    display: flex;
}

.userGroup .rightInfo .detail .num{
    display: flex;
}

.userGroup .signUp{
    margin-top: 35rpx;
    height: 80rpx;
    width: 180rpx;
    font-size: 28rpx;
    display: flex;
    justify-content: center;
}

.bet{
    background: aliceblue;
    width: 100%;
    height: 20rpx;
}