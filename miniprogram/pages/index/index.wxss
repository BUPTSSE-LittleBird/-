.indexPicture{
  width: 100%;
  height: 300rpx;
  white-space: nowrap;
}

.indexPicture .indexPictureItem{
  display: inline-block;
  width: 100%;
  height: 300rpx;
}

.pic1{
  background: saddlebrown;
}

.pic2{
  background: black;
}

.pic3{
  background: pink;
}

.pic4{
  background: blue;
}

.topGroup{
  background: #1e82d2;
  padding: 20rpx;
  height: 58rpx;
  width: 100%;
  display: flex;
}

.topGroup .searchGroup{
  flex: 1;
  display: flex;
}

.topGroup .searchGroup .searchInput{
  flex: 1;
  background: #1a71b7;
  border-radius: 4px;
  padding: 0 10rpx;
  font-size: 24rpx;
}

.topGroup .moreGroup{
  flex-basis: 180rpx;
  display: flex;
  justify-content: space-evenly;
}

.topGroup .moreGroup image{
  width: 50rpx;
  height: 50rpx;
}

.topGroup .searchGroup .placeholderInput{
  color: white;
}

.mainMenuGroup{
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
}

.mainMenuGroup .mainMenu{
  width: 80rpx;
  height: 120rpx;
  text-align: center;
}

.mainMenuGroup .mainMenu image{
  height: 70rpx;
  width: 100rpx;
}

.mainMenuGroup .mainMenu text{
  font-size: 21rpx;
}

.moreFuction{
  padding: 30rpx 10rpx;
  height: 450rpx;
}

.moreFuction .picText{
  color: antiquewhite;
}

.moreFuction .moreFuctionTop image{
  padding: 0 10rpx;
  height: 30rpx;
  width: 30rpx;
}

.moreFuction .moreFuctionBottom{
  width: 100%;
  height: 300rpx;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-around;
}

.moreFuction .moreFuctionBottom .moreFuctionLeft{
  background-repeat:no-repeat;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
  height: 400rpx;
  width: 320rpx;
  border-radius: 4px;
}

.moreFuction .moreFuctionBottom .moreFuctionRight{
  display: flex;
  height: 400rpx;
  width: 320rpx;
  flex-direction: column;
  justify-content: space-between;
}

.moreFuction .moreFuctionBottom .moreFuctionRight .rightItem{
  background-repeat:no-repeat;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
  border-radius: 4px;
  width: 100%;
  height: 180rpx;
}

.moreFuction .review{
  margin-top: 20rpx;
  margin-left: 20rpx;
  padding: 20rpx 0;
  background-repeat:no-repeat;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
  height: 350rpx;
  width: 690rpx;
  border-radius: 4px;
}