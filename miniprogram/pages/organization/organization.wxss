.topGroup{
    background: #1e82d2;
    padding: 20rpx;
    height: 58rpx;
    width: 100%;
    display: flex;
}

.topGroup .searchGroup{
    display: flex;
    width: 700rpx;
}

.topGroup .searchGroup .searchInput{
    flex: 1;
    background: #1a71b7;
    border-radius: 4px;
    padding: 0 10rpx;
    font-size: 24rpx;
}

.topGroup .searchGroup .placeholderInput{
    color: white;
}

.container{
    padding: 20rpx;
    height: 120rpx;
    border-bottom: 5rpx solid lightblue;
}

.container .organizationGroup{
    display: flex;
    width: 100%;
    height: 100%;
}

.organizationGroup .userGroup{
    display: flex;

}

.userGroup .avatar{
    width: 120rpx;
    height: 120rpx;
}

.userGroup .rightInfo{
    height: 100%;
    width: 400rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 20rpx;
}

.userGroup .rightInfo .name{
    font-size: 30rpx;
    color: #323232;
}

.userGroup .rightInfo .detail{
    font-size: 20rpx;
    color: #656565;
}

.userGroup .rightInfo .detail .activities{
    display: flex;
}

.userGroup .rightInfo .detail .people{
    display: flex;
}

.organizationGroup .time{
    margin-top: 45rpx;
    font-size: 28rpx;
    color: cadetblue;
}
