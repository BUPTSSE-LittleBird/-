.container{
  padding: 20rpx;
  height: 280rpx;
}

.container .user{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.container .user .userTop{
  height: 120rpx;
  display: flex;
  justify-content: left;
}

.userTop .avatar{
  height: 120rpx;
  width: 120rpx;
}

.userTop .rightInfo{
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.userTop .rightInfo .name{
  color: #323232;
  font-size: 32rpx;
}

.star image{
  height: 50rpx;
  width: 50rpx;
}

.user .userBottom{
  margin-top: 50rpx;
  display: flex;
  justify-content: space-around;
}

.user .userBottom .msg{
  display: flex;
  flex-direction: column;
  text-align: center;
}

.bet{
  background: aliceblue;
  width: 100%;
  height: 20rpx;
}

.function{
  padding: 20rpx;
  height: 50rpx;
  width: 100%;
}

.function .picLeft{
  margin-top: 7rpx;
